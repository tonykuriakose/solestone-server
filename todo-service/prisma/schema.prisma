generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or your DB
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())

  tasks     Task[]
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime?
  status      TaskStatus
  priority    TaskPriority
  tags        String[]
  createdAt   DateTime     @default(now())

  user        User         @relation(fields: [userId], references: [id])
  userId      String
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}
